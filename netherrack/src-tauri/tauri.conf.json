{
    "$schema": "https://schema.tauri.app/config/1",
    "build": {
        "devPath": "../src",
        "distDir": "../src",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "Netherrack",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "window": {
                "all": true,
                "create": true,
                "center": true,
                "requestUserAttention": true,
                "setResizable": true,
                "setMaximizable": true,
                "setMinimizable": true,
                "setClosable": true,
                "setTitle": true,
                "maximize": true,
                "unmaximize": true,
                "minimize": true,
                "unminimize": true,
                "show": true,
                "hide": true,
                "close": true,
                "setDecorations": true,
                "setAlwaysOnTop": true,
                "setContentProtected": true,
                "setSize": true,
                "setMinSize": true,
                "setMaxSize": true,
                "setPosition": true,
                "setFullscreen": true,
                "setFocus": true,
                "setIcon": true,
                "setSkipTaskbar": true,
                "setCursorGrab": true,
                "setCursorVisible": true,
                "setCursorIcon": true,
                "setCursorPosition": true,
                "setIgnoreCursorEvents": true,
                "startDragging": true,
                "print": true
            }
        },
        "windows": [
            {
                "title": "Netherrack",
                "width": 400,
                "height": 200,
                "decorations": false,
                "url": "splashscreen.html",
                "label": "splashscreen",
                "fullscreen": false,
                "resizable": false,
                "center": true,
                "transparent": true,
                "alwaysOnTop": true,
                "skipTaskbar": true
            },
            {
                "title": "Netherrack",
                "width": 800,
                "height": 600,
                "decorations": false,
                "label": "main",
                "visible": false,
                "minHeight": 400,
                "minWidth": 600
            }
        ],
        "security": {
            "csp": null
        },
        "bundle": {
            "active": true,
            "targets": "all",

            "identifier": "com.bastionmc.netherrack",
            "publisher": "BastionMC",
            "category": "DeveloperTool",
            "shortDescription": "An IDE for datapacks.",
            "longDescription": "A highly configurable open-source IDE for datapacks.",
            "copyright": "BastionMC & Netherrack Contributors, 2024",

            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        }
    }
}
